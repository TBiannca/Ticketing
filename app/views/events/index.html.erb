<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table class="table">
  <thead class ="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Date</th>
      <th scope="col">Location</th>
      <th scope="col">Seats</th>
      <th scope="col">Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.date %></td>
        <td><%= event.location %></td>
        <td><%= event.seats %></td>
        <td><%= event.price %></td>
        <td><%= link_to 'Show', event %></td>
        <% if event.seats != 0 %>
          <td><button type="button" class="btn btn-outline-success"><%= link_to 'Buy', ticketing_code_path(:name => @name, :email => @email, :event => event), data: { confirm: 'Are you sure you want to pay ' + event.price.to_s + '$ ?' } %></button></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
